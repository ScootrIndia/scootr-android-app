<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#71aaaaaa"

    >

    <com.firebug.scootr.Views.MyTextView
        android:id="@+id/distance"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:text="70"
        android:textSize="25sp"
        app:edittextfont="NEXA LIGHT.OTF" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llTo">


        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/pick" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/addressSource"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:text="#562 Koramamgla Main Road, \n 1st Block Koramamgla, \n Banglore, 560064 "
            android:textSize="16sp"
            app:edittextfont="NEXA LIGHT.OTF"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll2"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="to"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer">

        <ImageView
            android:id="@+id/flagIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/drop" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/addressDestination"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:text="#16 Byrappa Gardens, \n Ramchandrapura, Jalhali Post \n Banglore, 560072 "
            android:textSize="16sp"
            app:edittextfont="NEXA LIGHT.OTF"


            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#444444"
        android:orientation="horizontal">

        <com.firebug.scootr.Views.MyTextView
            android:layout_width="wrap_content"
            android:id="@+id/cancel"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="22sp"
            app:edittextfont="NEXA LIGHT.OTF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"

            />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textSize="22sp"
            app:edittextfont="NEXA LIGHT.OTF" />

    </LinearLayout>
</RelativeLayout>
