<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical"
    android:visibility="visible"
    card_view:cardElevation="20dp"
    android:layout_alignParentBottom="true"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="70dp"
    card_view:cardBackgroundColor="#000000"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout

        android:id="@+id/alert"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/call"
            android:foregroundGravity="left" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:textSize="17dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingTop="15dp"
            android:text="Rajat Sharma"
            android:textColor="#000000"
            app:edittextfont="NEXA LIGHT.OTF" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/track"
            android:paddingRight="20dp" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignTop="@+id/imageView2"
            android:paddingTop="5dp"
            android:text="#16 Byrappa Gardens,"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="Ramchandrapura, Jalahalli Post"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/imageView2"
            android:text="Banglore, 560072"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collect_amount"
        android:layout_centerHorizontal="true"
android:layout_margin="5sp"
        android:text="Slide down to see less"
        app:edittextfont="NEXA LIGHT.OTF" />


        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/phone"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:layout_alignLeft="@+id/textView8"
            android:text="9770069896"
            app:edittextfont="NEXA LIGHT.OTF" />



        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/collect_amount"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:padding="5dp"
            android:background="#ff585B"
            android:textSize="17dp"
            android:text="Collect Rs. 1760 on Delivery"
            app:edittextfont="NEXA LIGHT.OTF" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>