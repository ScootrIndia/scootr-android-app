<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:visibility="visible"
    card_view:cardElevation="20dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#000000"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/call"
            android:foregroundGravity="left" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:paddingTop="15dp"
            android:text="Rajat Sharma"
            android:textColor="#000000"
            app:edittextfont="NEXA LIGHT.OTF" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/track"
            android:paddingRight="20dp" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignTop="@+id/imageView2"
            android:paddingTop="5dp"
            android:text="#16 Byrappa Gardens,"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="Ramchandrapura, Jalahalli Post"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/imageView2"
            android:text="Banglore, 560072"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:paddingTop="5dp"
            android:text="+91 8734546543"
            android:textColor="#000000"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="10dp"
            android:background="#FFEC3630"
            android:gravity="center"
            android:text="Collected Rs.1760 On delivery"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:edittextfont="NEXA LIGHT.OTF" />

        <com.firebug.scootr.Views.MyTextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView10"
            android:paddingTop="10dp"
            android:text="Slide down to see less"
            app:edittextfont="NEXA LIGHT.OTF" />

    </RelativeLayout>
</android.support.v7.widget.CardView>