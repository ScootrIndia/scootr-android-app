<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >
    <com.firebug.scootr.Views.MyTextView
        app:edittextfont="NEXA LIGHT.OTF"
        android:id="@+id/orderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: V91LY10"

        android:layout_alignParentLeft="true" 
        android:layout_margin="7dp"
        
        android:textSize="16sp"/>
    
    <ImageView
        android:id="@+id/imgId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info"
        android:layout_alignParentRight="true"
        android:layout_margin="7dp"
        />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstLL"
        android:layout_below="@+id/orderTv"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp">
    <ImageView
        android:id="@+id/settingImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:src="@drawable/settldone"
        android:layout_gravity="center_vertical"

        
         />
    
    <com.firebug.scootr.Views.MyTextView
        app:edittextfont="NEXA LIGHT.OTF"
        android:id="@+id/rsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 145"
        android:layout_marginLeft="7dp"

        android:layout_gravity="center_vertical"
        />
    
    </LinearLayout>

</RelativeLayout>
