<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include1"
            layout="@layout/header_layout" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/include1" />

        <include
            android:id="@+id/include2"
            layout="@layout/footer_layout" />

        <Button
            android:id="@+id/fare_estimate_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonRequestLloads"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/buttonRequestLloads"
            android:layout_below="@+id/buttonRequestLloads"
            android:text="Estimate Fare" />

        <Button
            android:id="@+id/buttonRequestLloads"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/include2"
            android:text="Request" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/include2"
            android:layout_alignEnd="@+id/buttonRequestLloads"
            android:layout_alignRight="@+id/buttonRequestLloads"
            android:src="@drawable/location_marker" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="0dp" />

        <Button
            android:id="@+id/resetButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mapView"
            android:layout_alignEnd="@+id/buttonGetDirection"
            android:layout_alignRight="@+id/buttonGetDirection"
            android:background="#0000"
            android:text="Reset"
            android:textColor="#FFFF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include1"
            android:background="@drawable/taxi_screen_box_destination_address"
            android:gravity="center"
            android:text="Choose Your Destination Address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#545454" />

        <AutoCompleteTextView
            android:id="@+id/sourceAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonGetDirection"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_toLeftOf="@+id/buttonGetDirection"
            android:layout_toStartOf="@+id/buttonGetDirection"
            android:background="@drawable/texi_screen_box"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="Souce Value"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonGetDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView8"
            android:background="@drawable/ok_button_taxi_screen"
            android:textColor="@color/white" />

        <AutoCompleteTextView
            android:id="@+id/destinationAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sourceAddressTextView"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:background="@drawable/texi_screen_box"
            android:gravity="center"
            android:text="Destination"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sourceAddressTextView"
            android:layout_toEndOf="@+id/sourceAddressTextView"
            android:layout_toRightOf="@+id/sourceAddressTextView"
            android:background="@drawable/ok_button_taxi_screen"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/samallTaxibutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/include2"
            android:background="@drawable/service_detial_fourth_icon_nonactive" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/samallTaxibutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/samallTaxibutton"
            android:layout_below="@+id/samallTaxibutton"
            android:gravity="center"
            android:text="Small"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/include1"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="Taxi"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/nav_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button5"
            android:layout_marginTop="15sp"
            android:background="@drawable/nav_arrow" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:layout_alignTop="@+id/include2"
            android:text="New Button" />


    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment
        android:id="@+id/navigation_drawer"

        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
