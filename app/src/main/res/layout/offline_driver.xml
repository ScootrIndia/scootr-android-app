<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#73808080"
    android:visibility="gone"
    android:id="@+id/offline_scootr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true">

        <com.firebug.scootr.Views.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/abc"
            android:text="Go online to start"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            app:edittextfont="NEXA LIGHT.OTF" />


        <com.firebug.scootr.Views.MyTextView
            android:layout_width="match_parent"
            android:id="@+id/abc"
            android:layout_height="wrap_content"
            android:layout_above="@+id/go_online"
            android:text="accepting deliveries"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            app:edittextfont="NEXA LIGHT.OTF"/>


        <com.firebug.scootr.Views.MyTextView
            style="@style/FlatWaveColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scootr!"
            app:rd_delayClick="afterRelease"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/go_online"
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="10dp"
            app:edittextfont="NEXA LIGHT.OTF"
            />
    </RelativeLayout>

</RelativeLayout>